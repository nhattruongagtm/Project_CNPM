<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="160dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="160dp"
        android:id="@+id/lottie_disconnected_internet"/>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#2E0400"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có kết nối internet!"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#250300"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng kiểm tra lại!"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/try_connect_internet"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_shape_try"
        android:text="Thử lại"/>



</LinearLayout>