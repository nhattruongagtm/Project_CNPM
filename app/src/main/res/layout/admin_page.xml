<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#f8f8f8"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/btnMenuAdmin"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:src="@drawable/admin" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="200" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="17dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#f8f8f8"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/home_page_cart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="2sp"
                    android:src="@drawable/notify" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ CỬA HÀNG"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:gravity="center" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý khách hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#CDDC39"
            app:cornerRadius="20dp"
            tools:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnQLMA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý món ăn"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="20dp"
            tools:cornerRadius="20dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý nhân viên"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#00BCD4"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý đơn hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thống kê"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#8BC34A"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Khuyến mãi"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FFEB3B"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>