<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:outlineSpotShadowColor="@color/transparency"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#F4F6FA"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <CheckBox
            android:id="@+id/checkBox_dish_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dish_management"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/pizza_home_page_item" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/category_dish_management"
                    android:textColor="#4CDEE3"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza"/>
                <TextView
                    android:id="@+id/name_dish_management"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza hải sản "/>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_baseline_star_24"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:src="@drawable/ic_baseline_star_24"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:src="@drawable/ic_baseline_star_24"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:src="@drawable/ic_baseline_star_24"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/price_dish_management"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:text="99.000 VND"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>